<!DOCTYPE html>
html(lang="en")
head
    meta(charset="UTF-8")
    title Welcome to Simple CRM
    // Bootstrap
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    // Font Awsome
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
    // jQuery UI CSS
    link(rel="stylesheet", href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
    // Custom
    link(rel="stylesheet", href="../css/styles.css")
body
    .wrapper
        .container#login-container
            form(method="post").form-signin#loginForm
                h2.form-signin-heading Please Signin
                label(for="inputEmail").sr-only Verification Id
                input(type="text", placeholder="Enter Your User Id", required="", autofocus="", name="username").form-control#inputEmail
                label(for="inputPassword").sr-only Password
                input(type="password", placeholder="Password", required="", name="password").form-control#inputPassword
                label(for="checkRole").sr-only Role
                select(name="role").form-control#role
                    option(value="admin") Admin
                    option(value="client") Client                
                button(type="submit").btn.btn-lg.btn-primary.btn-block#loginBtn Sign In

            .col-md-12#login-alert
                .alert.alert-danger Oh! Snap Something happened
    // jQuery
    script(src="https://code.jquery.com/jquery-3.1.1.min.js", integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=", crossorigin="anonymous")
    // jQuery UI
    script(src="http://code.jquery.com/ui/1.12.1/jquery-ui.min.js", integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=", crossorigin="anonymous")
